<com.alamkanak.weekview.WeekView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/week_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnGap="8dp"
    app:dayBackgroundColor="#05000000"
    app:eventTextColor="@color/material_text_color_white_text"
    app:futureBackgroundColor="#05000000"
    app:futureWeekendBackgroundColor="#10c2185b"
    app:headerColumnBackground="#ffffffff"
    app:headerColumnPadding="8dp"
    app:headerColumnTextColor="#8f000000"
    app:headerRowBackgroundColor="#ffefefef"
    app:headerRowPadding="12dp"
    app:hourHeight="60dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
    app:noOfVisibleDays="3"
    app:nowLineColor="@color/colorAccent"
    app:pastBackgroundColor="#15000000"
    app:pastWeekendBackgroundColor="#154d0924"
    app:showDistinctPastFutureColor="true"
    app:showDistinctWeekendColor="true"
    app:showNowLine="true"
    app:textSize="12sp"
    app:todayBackgroundColor="#1848adff"
    app:todayHeaderTextColor="@color/colorAccent"/>
